<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">


    <TextView
        android:id="@+id/organizer_facility_activity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="My Facility"
        android:textColor="@color/material_dynamic_neutral_variant80"
        app:layout_constraintEnd_toStartOf="@+id/new_facility_button"
        app:layout_constraintStart_toEndOf="@+id/organizer_facility_activity_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/organizer_facility_activity_back_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/material_dynamic_neutral_variant80"
        android:backgroundTint="#1E1E1E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_facility_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="New"
        android:textColor="@color/material_dynamic_neutral_variant80"
        android:backgroundTint="#1E1E1E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/organizer_facility_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/view_background"
        android:divider="@color/material_dynamic_neutral_variant40"
        android:dividerHeight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_facility_activity_back_button" />
</androidx.constraintlayout.widget.ConstraintLayout>