<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background">



    <TextView
        android:id="@+id/facilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Facility"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#C0C7CD"
        app:layout_constraintBottom_toTopOf="@+id/facilityList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/facilityList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/listview_divider_color"
        android:dividerHeight="2dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/view_background"/>

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="67sp"
        android:layout_height="40sp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#40484D"
        android:text="@string/about"
        app:icon="@drawable/refreshicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/facilityText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_in_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#40484D"
        android:text="BACK"

        app:icon="@drawable/return_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>