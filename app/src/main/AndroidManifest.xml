<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Breeze0events"
        tools:targetApi="31">

        <!-- OverallLoginPage is the launcher activity -->
        <activity
            android:name=".OverallLoginPage"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OrganizerEventActivity -->
        <activity
            android:name=".OrganizerMyListActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <!-- OrganizerMapActivity -->
        <activity
            android:name=".OrganizerMapActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />
        <activity
            android:name=".OrganizerEventActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />
        <activity
            android:name=".OrganizerFacilityActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".EntrantEventActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".EntrantLoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".EntrantMylistActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".EntrantProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".AdminOperateActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <activity
            android:name=".AdminProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />
        <activity
            android:name=".EntrantSearchingActivity"
            android:exported="true"
            android:theme="@style/Theme.Breeze0events" />

        <!-- OverallStorageController is not a UI activity, so it doesn't need to be exported or have a theme -->
        <activity
            android:name=".OverallStorageController"
            android:exported="false" />
    </application>

</manifest>
